# NPM Configuration for Production

# Use pnpm as package manager
package-manager=pnpm

# Strict peer dependencies (set to false for compatibility)
strict-peer-dependencies=false

# Legacy peer deps (fallback for incompatible packages)
legacy-peer-deps=false

# Auto install peers
auto-install-peers=true

# Shamefully hoist (for compatibility with some packages)
shamefully-hoist=false

# Node linker (hoisted is more compatible)
node-linker=hoisted
